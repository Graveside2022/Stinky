# Stinkster Environment Configuration
# Copy this file to .env and modify values as needed

# Project Settings
PROJECT_NAME="Stinkster"
PROJECT_VERSION="1.0.0"
ENVIRONMENT="development"

# GPS Configuration
GPS_DEVICE="/dev/ttyUSB0"
GPS_BAUDRATE="4800"
GPSD_PORT="2947"

# Kismet Configuration
KISMET_CONFIG_DIR="/etc/kismet"
KISMET_DATA_DIR="/home/pi/projects/stinkster/data/kismet"
KISMET_LOG_PREFIX="stinkster"

# HackRF Configuration
HACKRF_FREQUENCY="145000000"
HACKRF_SAMPLE_RATE="2400000"
HACKRF_LNA_GAIN="40"
HACKRF_VGA_GAIN="35"
HACKRF_AMP_ENABLE="0"

# OpenWebRX Configuration
OPENWEBRX_PORT="8073"
OPENWEBRX_ADMIN_USER="admin"
OPENWEBRX_ADMIN_PASSWORD="hackrf"

# WigleToTAK Configuration
WIGLETOTAK_PORT="6969"
WIGLETOTAK_TAK_SERVER="239.2.3.1"
WIGLETOTAK_TAK_PORT="6969"

# TAK Configuration
TAK_SERVER_HOST="239.2.3.1"
TAK_SERVER_PORT="6969"
TAK_CALLSIGN="STINKSTER"

# Logging
LOG_LEVEL="INFO"
LOG_DIR="/home/pi/projects/stinkster/logs"

# Development
DEBUG="false"
DEVELOPMENT_MODE="false"

# Network Interface
WIFI_INTERFACE="wlan2"
MONITOR_INTERFACE="wlan2mon"

# Paths
PYTHON_VENV_PATH="/home/pi/projects/stinkster/venv"
CONFIG_PATH="/home/pi/projects/stinkster/config"
SCRIPTS_PATH="/home/pi/projects/stinkster/scripts"