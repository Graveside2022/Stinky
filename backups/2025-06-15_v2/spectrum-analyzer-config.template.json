{
  "server": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": false,
    "cors_origins": ["*"]
  },
  "hackrf": {
    "default_frequency": 915000000,
    "default_sample_rate": 20000000,
    "default_bandwidth": 20000000,
    "default_lna_gain": 16,
    "default_vga_gain": 20,
    "fft_size": 1024,
    "averaging": 5
  },
  "frequency_bands": [
    {
      "name": "ISM 433MHz",
      "start": 433050000,
      "end": 434790000,
      "description": "Industrial, Scientific, Medical"
    },
    {
      "name": "ISM 915MHz",
      "start": 902000000,
      "end": 928000000,
      "description": "Industrial, Scientific, Medical"
    },
    {
      "name": "2.4GHz WiFi",
      "start": 2400000000,
      "end": 2483500000,
      "description": "WiFi/Bluetooth"
    },
    {
      "name": "2m Ham",
      "start": 144000000,
      "end": 148000000,
      "description": "2m Amateur Radio"
    },
    {
      "name": "70cm Ham",
      "start": 420000000,
      "end": 450000000,
      "description": "70cm Amateur Radio"
    }
  ],
  "waterfall": {
    "history_size": 100,
    "color_map": "viridis",
    "min_db": -80,
    "max_db": -20
  },
  "websocket": {
    "update_rate": 10,
    "max_clients": 10,
    "ping_interval": 30
  },
  "logging": {
    "level": "INFO",
    "file": "${LOG_DIR}/spectrum_analyzer.log"
  }
}