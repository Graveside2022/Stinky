{
  "server": {
    "host": "0.0.0.0",
    "port": 5001,
    "debug": false,
    "api_key": "YOUR_SECURE_API_KEY_HERE"
  },
  "endpoints": {
    "github": {
      "enabled": true,
      "secret": "YOUR_GITHUB_WEBHOOK_SECRET",
      "path": "/webhook/github"
    },
    "generic": {
      "enabled": true,
      "path": "/webhook/generic"
    },
    "health": {
      "enabled": true,
      "path": "/health"
    }
  },
  "actions": {
    "restart_services": {
      "enabled": true,
      "allowed_services": ["openwebrx", "kismet", "gpsd", "wigletotak"]
    },
    "update_code": {
      "enabled": false,
      "repo_path": "/home/pi/projects/stinkster",
      "branch": "main"
    }
  },
  "notifications": {
    "enabled": false,
    "webhook_url": "YOUR_DISCORD_OR_SLACK_WEBHOOK_URL",
    "events": ["service_restart", "code_update", "error"]
  },
  "security": {
    "allowed_ips": ["127.0.0.1", "YOUR_TRUSTED_IP"],
    "rate_limit": {
      "enabled": true,
      "requests_per_minute": 10
    }
  },
  "logging": {
    "level": "INFO",
    "file": "${LOG_DIR}/webhook.log",
    "max_size": "10MB",
    "backup_count": 3
  }
}